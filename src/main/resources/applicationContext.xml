<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="classicalMusicBean"
        class="org.example.ClassicalMusic">
    </bean>

    <bean id="rockMusicBean"
          class="org.example.RockMusic">
    </bean>

    <bean id="alterRockMusicBean"
          class="org.example.AlterRock"
          factory-method="getAlterRock"
          init-method="doBeanInit"
          destroy-method="doBeanDestroy">
    </bean>

    <bean id="musicPlayer"
        class="org.example.MusicPlayer"
        scope="prototype"
        init-method="doBeanInit"
        destroy-method="doBeanDestroy">
        <constructor-arg>
            <list>
                <ref bean="classicalMusicBean" />
                <ref bean="rockMusicBean" />
                <ref bean="alterRockMusicBean" />
            </list>
        </constructor-arg>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>